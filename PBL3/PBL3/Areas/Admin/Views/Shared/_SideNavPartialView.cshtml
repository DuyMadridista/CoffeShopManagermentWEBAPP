<script>
    // Lấy danh sách tất cả các thẻ li có class "dropdown"
    var dropdownItems = document.querySelectorAll(".side-nav-menu .nav-item.dropdown");

    // Lặp qua danh sách các thẻ li và thêm sự kiện click
    dropdownItems.forEach(function (item) {
        item.addEventListener("click", function () {
            // Toggle class "open" trên thẻ li
            item.classList.toggle("open");

            // Tìm thẻ ul bên trong thẻ li và thay đổi thuộc tính "style" của nó
            var ulElement = item.querySelector(".dropdown-menu");
            if (ulElement.style.display === "none" || ulElement.style.display === "") {
                ulElement.style.display = "block";
               

            } else {
                ulElement.style.display = "none";
            }
        });
    });
</script>

